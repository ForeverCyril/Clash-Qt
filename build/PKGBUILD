# Maintainer: ForeverCyril <cyrilchen1999@gmail.com>
pkgname=clash-qt
pkgver=2.0_alpha.1
pkgrel=1
pkgdesc="A GUI for clash"
arch=(x86_64)
url="https://github.com/ForeverCyril/Clash-Qt/"
license=('GPL')
groups=()
depends=(
    'qt5-base' 
    'yaml-cpp'
)
makedepends=()
optdepends=()
provides=('clash')
conflicts=('clash' 'clash-tun' 'clash-dev-git')
source=($pkgname-$pkgver.tar.gz::https://github.com/ForeverCyril/Clash-Qt/archive/v$pkgver.tar.gz)
noextract=()
md5sums=() #autofill using updpkgsums

build() {
  cd "Clash-Qt-$pkgver"
  cmake . -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "Clash-Qt-$pkgver"
  make DESTDIR="$pkgdir/" install
}
md5sums=('30bb6fe53c5a69124ac7a830c2d0aad9')
